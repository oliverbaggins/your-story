<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel="stylesheet" href="/public/assets/index.css" type="text/css">
    <link rel="shortcut icon" href="/public/assets/favicon.ico" type="image/x-icon">
    <title>Your Story</title>
</head>
<body>
    
    <div class="container-fluid">

        <div class="row row-1">
            <div class="col-sm-6 mx-auto col-new">
                <p>YOUR STORY</p>
                <a href="/articles/new" class="btn">New Story</a>
            </div>
        </div>

        <% articles.forEach(article => { %>
            <div class="row">
                <div class="col-sm-6 mx-auto">
                    <div class="caixa">
                        <h3 class="title"><%= article.title %></h3>
                        <p class="date">
                            <%= article.createdAt.toLocaleDateString() %>
                        </p>
                        <p class="Description"><%= article.description %></p>
                        <div class="row row-btn">
                            <div class="col">
                                <a href="articles/<%= article.slug %>" class="btn btn-2">Read More</a>
                            </div>
                            <div class="col">
                                <a href="articles/edit/<%= article.id %>" class="btn btn-2">Edit</a>
                            </div>
                            <div class="col">
                                <form action="/articles/<%= article.id %>?_method=DELETE" method="POST">
                                    <button class="btn btn-2">Delete</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        <% }) %>
        
    </div>
</body>
</html>
